<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingTop="32dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/logoImageView"
        style="@style/LoginTopIcon"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginCaptchaNotice"
        style="@style/TextAppearance.Vector.Login.Text.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/auth_recaptcha_message"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <WebView
        android:id="@+id/loginCaptchaWevView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginCaptchaNotice" />


    <ProgressBar
        android:id="@+id/loginCaptchaProgress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/loginCaptchaWevView"
        app:layout_constraintEnd_toEndOf="@+id/loginCaptchaWevView"
        app:layout_constraintStart_toStartOf="@+id/loginCaptchaWevView"
        app:layout_constraintTop_toTopOf="@+id/loginCaptchaWevView" />

</androidx.constraintlayout.widget.ConstraintLayout>

